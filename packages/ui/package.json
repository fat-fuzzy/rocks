{
	"package": "@fat-fuzzy/ui",
	"name": "@fat-fuzzy/ui",
	"version": "0.1.54",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm package",
		"test": "pnpm test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "./node_modules/@fat-fuzzy/config/node_modules/.bin/playwright test",
		"test:unit": "vitest run"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"dependencies": {
		"dompurify": "^3.1.6"
	},
	"peerDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@sveltejs/kit": "2.5.4",
		"dompurify": "3.1.6",
		"svelte": "5.0.0"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-cloudflare": "^4.7.3",
		"@sveltejs/enhanced-img": "^0.3.9",
		"@sveltejs/kit": "^2.5.4",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.5",
		"@types/dompurify": "^3.0.5",
		"mdsvex": "^0.12.3",
		"postcss": "^8.4.39",
		"publint": "^0.2.11",
		"svelte": "5.0.5",
		"svelte-check": "^4.0.5",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	},
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"engines": {
		"node": ">= 22"
	}
}
