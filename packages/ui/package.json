{
	"package": "@fat-fuzzy/ui",
	"name": "@fat-fuzzy/ui",
	"version": "0.1.73",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"coverage": "vitest run --coverage",
		"test": "pnpm test:unit && pnpm test:e2e",
		"test:unit": "vitest run",
		"test:e2e": "NODE_ENV=test playwright test",
		"test:ui": "NODE_ENV=test playwright test --ui",
		"test:dev": "pnpm test:unit:dev && pnpm test:report",
		"test:dev:unit": "vitest",
		"test:report": "NODE_ENV=test playwright test --reporter=html"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"dependencies": {
		"dompurify": "3.2.6"
	},
	"peerDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@sveltejs/kit": "2.0.0",
		"dompurify": "^3.1.7",
		"svelte": "5.0.0",
		"wrangler": "^4.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "1.3.2",
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@playwright/test": "1.56.1",
		"@sveltejs/adapter-cloudflare": "7.2.3",
		"@sveltejs/kit": "2.37.0",
		"@sveltejs/package": "2.5.0",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"mdsvex": "0.12.6",
		"postcss": "8.5.6",
		"publint": "0.3.12",
		"svelte": "5.38.6",
		"svelte-check": "4.3.1",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vite": "7.1.11",
		"vitest": "3.2.4"
	},
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"engines": {
		"node": ">= 22"
	}
}
