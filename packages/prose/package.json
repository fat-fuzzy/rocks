{
	"package": "@fat-fuzzy/prose",
	"name": "@fat-fuzzy/prose",
	"version": "0.1.0",
	"description": "UI for writing and reading using markdown",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:todo": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test --reporter=html",
		"test": "echo \"@fat-fuzzy/prose: no tests specified\""
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tiptap/core": "^2.9.1",
		"@tiptap/pm": "^2.9.1",
		"@tiptap/starter-kit": "^2.9.1",
		"@types/eslint": "^9.6.0",
		"globals": "^15.0.0",
		"mdsvex": "^0.12.3",
		"publint": "^0.2.12",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.6.3",
		"vite": "^6.0.14",
		"vitest": "^3.0.5"
	}
}
