{
	"package": "@fat-fuzzy/prose",
	"name": "@fat-fuzzy/prose",
	"version": "0.1.20",
	"description": "UI for writing and reading using markdown",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:todo": "pnpm test:unit -- --run && pnpm test:e2e",
		"test:ui": "NODE_ENV=test playwright test --ui",
		"test:e2e": "NODE_ENV=test playwright test",
		"test:report": "NODE_ENV=test playwright test --reporter=html",
		"test": "echo \"@fat-fuzzy/prose: no tests specified\""
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.37.0",
		"svelte": "^5.38.6"
	},
	"devDependencies": {
		"@eslint/compat": "1.3.2",
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "1.56.1",
		"@sveltejs/adapter-auto": "6.1.0",
		"@sveltejs/kit": "2.49.5",
		"@sveltejs/package": "2.5.0",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"@tiptap/core": "3.15.3",
		"@tiptap/pm": "3.15.3",
		"@tiptap/starter-kit": "3.15.3",
		"@types/eslint": "9.6.1",
		"globals": "16.3.0",
		"mdsvex": "0.12.6",
		"publint": "0.3.12",
		"svelte": "5.51.5",
		"svelte-check": "4.3.4",
		"typescript": "5.9.2",
		"vite": "7.1.11",
		"vitest": "3.2.4"
	}
}
