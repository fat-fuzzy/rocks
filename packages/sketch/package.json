{
	"package": "@fat-fuzzy/sketch",
	"name": "@fat-fuzzy/sketch",
	"version": "0.1.2",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "pnpm test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./sketch": "./dist/index.js"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@fat-fuzzy/lib": "^workspace",
		"@fat-fuzzy/style": "^workspace",
		"@fat-fuzzy/ui": "^workspace"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/lib": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.45.2",
		"@sveltejs/adapter-cloudflare": "^4.6.1",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"svelte": "5.0.0-next.184",
		"svelte-check": "^3.8.4",
		"svelte-preprocess": "^5.1.4",
		"@types/node": "^20.14.10",
		"prettier": "^3.3.3",
		"publint": "^0.1.16",
		"stylelint": "^16.7.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
