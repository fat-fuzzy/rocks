{
	"package": "@fat-fuzzy/design",
	"name": "@fat-fuzzy/design",
	"version": "0.1.13",
	"description": "Fat Fuzzy Design",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:csscore": "rollup --config config/rollup.config.csscore.js -w",
		"build:csscore": "rollup --config config/rollup.config.csscore.js",
		"dev:csstokens": "rollup --config config/rollup.config.csstokens.js -w",
		"build:csstokens": "rollup --config config/rollup.config.csstokens.js",
		"build:doc": "rollup --config config/rollup.config.doc.js",
		"dev:doc": "rollup --config config/rollup.config.doc.js -w",
		"build:play": "rollup --config config/rollup.config.play.js",
		"dev:play": "rollup --config config/rollup.config.play.js -w",
		"build:ui": "rollup --config config/rollup.config.ui.js",
		"dev:ui": "rollup --config config/rollup.config.ui.js -w",
		"build": "pnpm build:csscore && pnpm build:csstokens && pnpm build:doc && pnpm build:play && pnpm build:ui",
		"dev": "dev:ui",
		"pretest": "pnpm build:ui",
		"build:sd": "node_modules/.bin/style-dictionary build",
		"clean:sd": "rm -rf dist/style-dictionary",
		"prepublishOnly": "pnpm build",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"main": "dist/index.js",
	"files": [
		"dist/css"
	],
	"exports": {
		".": {
			"css": "./dist/styles/css/core/main.css"
		},
		"./doc": "./dist/doc/css/main.css",
		"./play": "./dist/play/css/main.css",
		"./tokens": "./dist/tokens/css/main.css",
		"./ui": "./dist/ui/css/main.css"
	},
	"devDependencies": {
		"@csstools/postcss-bundler": "^1.0.6",
		"@csstools/postcss-global-data": "^2.1.0",
		"@csstools/postcss-minify": "^1.0.2",
		"@fat-fuzzy/config": "workspace:*",
		"autoprefixer": "^10.4.16",
		"open-props": "1.6.5",
		"postcss": "8.4.31",
		"postcss-cli": "^10.1.0",
		"postcss-custom-media": "^10.0.2",
		"postcss-jit-props": "^1.0.14",
		"postcss-load-config": "4.0.1",
		"postcss-preset-env": "^9.2.0",
		"rollup": "4.0.2",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.69.0",
		"style-dictionary": "^3.8.0"
	},
	"browserslist": "defaults",
	"type": "module"
}
