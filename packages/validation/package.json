{
	"package": "@fat-fuzzy/validation",
	"name": "@fat-fuzzy/validation",
	"version": "0.1.0",
	"main": "./dist/index.js",
	"scripts": {
		"build": "pnpm build:ajv && rollup -c",
		"build:ts": "pnpm tsc && pnpm build:ajv && rollup -c",
		"build:schemas": "node ./src/ajv/esm/ajv.js ",
		"build:ajv": "pnpm build:schemas && rollup --config rollup.config.ajv.js",
		"dev": "rollup -c -w",
		"dev:ajv": "rollup --config rollup.config.ajv.js -w",
		"test": "pnpm test:integrity && vitest",
		"test:integrity": "node tests/integrity.ajv.js",
		"pretest": "pnpm build"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"tslib": "^2.6.3"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/intl": "workspace:*",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/node": "^20.14.15",
		"ajv": "^8.17.1",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "^3.0.1",
		"fast-check": "^3.21.0",
		"fast-deep-equal": "^3.1.3",
		"rollup": "^4.20.0",
		"typescript": "^5.5.3",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"engines": {
		"node": ">= 20"
	}
}
