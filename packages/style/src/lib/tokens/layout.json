{
	"layout": {
		"$type": "dimension",
		"base": {"$value": "1rem"},
		"gap": {
			"xs": {"$value": "{scale.base.02}"},
			"sm": {"$value": "{scale.base.01}"},
			"md": {"$value": "{scale.base.00}"},
			"lg": {"$value": "{scale.base.10}"},
			"xl": {"$value": "{scale.base.20}"}
		},
		"sidebar": {
			"base": {"$value": "30ch"},
			"2xs": {"$value": "calc(var(--layout-sidebar-xs) / var(--size-ratio-sm))"},
			"xs": {"$value": "calc(var(--layout-sidebar-sm) / var(--size-ratio-sm))"},
			"sm": {"$value": "calc(var(--layout-sidebar-md) / var(--size-ratio-sm))"},
			"md": {"$value": "{layout.sidebar.base}"},
			"lg": {"$value": "calc(var(--layout-sidebar-md) * var(--size-ratio-sm))"},
			"xl": {"$value": "calc(var(--layout-sidebar-lg) * var(--size-ratio-sm))"},
			"2xl": {"$value": "calc(var(--layout-sidebar-xl) * var(--size-ratio-sm))"}
		}
	}
}
