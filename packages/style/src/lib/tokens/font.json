{
	"font": {
		"family": {
			"$type": "fontFamily",
			"system": {
				"sans": {
					"$value": [
						"-apple-system",
						"BlinkMacSystemFont",
						"Segoe UI",
						"Noto Sans",
						"Helvetica",
						"Arial",
						"sans-serif",
						"Apple Color Emoji",
						"Segoe UI Emoji"
					]
				},
				"mono": {
					"$value": [
						"Courier New",
						"Courier",
						"monospace"
					]
				}
			},
			"vendor": {
				"sans": {
					"$value": [
						"Montserrat"
					]
				},
				"heading": {
					"$value": [
						"Encode Sans SC"
					]
				},
				"mono": {
					"$value": [
						"Anonymous Pro"
					]
				}
			},
			"sans": {
				"base": {
					"$value": "{font.family.vendor.sans}"
				},
				"fallback": {
					"$value": "{font.family.system.sans}"
				}
			},
			"body": {
				"base": {
					"$value": "{font.family.vendor.sans}"
				},
				"fallback": {
					"$value": "{font.family.system.sans}"
				}
			},
			"heading": {
				"base": {
					"$value": "{font.family.vendor.heading}"
				},
				"fallback": {
					"$value": "{font.family.system.sans}"
				}
			},
			"subheading": {
				"base": {
					"$value": "{font.family.vendor.heading}"
				},
				"fallback": {
					"$value": "{font.family.system.sans}"
				}
			},
			"mono": {
				"base": {
					"$value": "{font.family.vendor.mono}"
				},
				"fallback": {
					"$value": "{font.family.system.mono}"
				}
			}
		},
		"weight": {
			"$type": "fontWeight",
			"100": {
				"$value": 100
			},
			"200": {
				"$value": 200
			},
			"300": {
				"$value": 300
			},
			"400": {
				"$value": 400
