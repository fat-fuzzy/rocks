			"h2": {
				"$value": "var(--fluid-3)"
			},
			"h3": {
				"$value": "var(--fluid-2)"
			},
			"h4": {
				"$value": "var(--fluid-1)"
			},
			"h5": {
				"$value": "var(--fluid-0)"
			},
			"body": {
				"$value": "var(--fluid-0)"
			},
			"code": {
				"$value": "var(--fluid-0)"
			},
			"ui": {
				"$value": "var(--fluid-0)"
			},
			"small": {
				"$value": "var(--fluid--1)"
			}
