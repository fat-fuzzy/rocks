			"500": {
				"$value": 500
			},
			"600": {
				"$value": 600
			},
			"700": {
				"$value": 700
			},
			"800": {
				"$value": 800
			},
			"light": {
				"$value": "{font.weight.200}"
			},
			"regular": {
				"$value": "{font.weight.400}"
			},
			"medium": {
				"$value": "{font.weight.500}"
			},
			"semibold": {
				"$value": "{font.weight.600}"
			},
			"bold": {
				"$value": "{font.weight.700}"
			},
			"extrabold": {
				"$value": "{font.weight.800}"
			},
			"h1": {
				"$value": "{font.weight.extrabold}"
			},
			"h2": {
				"$value": "{font.weight.semibold}"
			},
			"h3": {
				"$value": "{font.weight.semibold}"
			},
			"h4": {
				"$value": "{font.weight.semibold}"
			},
			"h5": {
				"$value": "{font.weight.semibold}"
			},
			"body": {
				"$value": "{font.weight.regular}"
			},
			"code": {
				"$value": "{font.weight.regular}"
			},
			"ui": {
				"$value": "{font.weight.medium}"
			},
			"link": {
				"$value": "{font.weight.regular}"
			}
		},
		"size": {
			"$type": "reference",
			"2xs": {
				"$value": "var(--fluid--3)"
			},
			"xs": {
				"$value": "var(--fluid--2)"
			},
			"sm": {
				"$value": "var(--fluid--1)"
			},
			"md": {
				"$value": "var(--fluid-0)"
