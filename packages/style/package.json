{
	"package": "@fat-fuzzy/style",
	"name": "@fat-fuzzy/style",
	"version": "0.1.0",
	"description": "Fat Fuzzy CSS",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "pnpm dev:core && pnpm dev:tokens",
		"dev:core": "rollup --config rollup.config.core.js -w",
		"dev:tokens": "rollup --config rollup.config.tokens.js -w",
		"build": "pnpm build:core && pnpm build:tokens",
		"build:core": "rollup --config rollup.config.core.js",
		"build:tokens": "rollup --config rollup.config.tokens.js",
		"lint:css": "stylelint ./src/lib/styles/css/**/*.css > ./logs/stylelint-css.log",
		"lint:scss": "stylelint ./src/lib/styles/scss/**/*.scss > ./logs/stylelint-scss.log",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier > ./logs/lint.log",
		"format": "prettier --write --ignore-path=../../.prettierignore .",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"main": "./dist/index.js",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./core": "./dist/styles/css/core/main.css",
		"./tokens": "./dist/styles/css/tokens/main.css"
	},
	"devDependencies": {
		"@cobalt-ui/cli": "^1.11.0",
		"@cobalt-ui/plugin-css": "^1.7.3",
		"@cobalt-ui/plugin-js": "^1.4.3",
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/lib": "workspace:*",
		"@fat-fuzzy/markdown": "workspace:^",
		"@types/node": "^20.11.19",
		"autoprefixer": "^10.4.17",
		"husky": "^9.0.11",
		"postcss": "8.4.35",
		"prettier": "^3.2.5",
		"rollup": "4.12.0",
		"rollup-plugin-scss": "^4.0.0",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-config-standard-scss": "^13.0.0"
	},
	"type": "module"
}
