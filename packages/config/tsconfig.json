{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/prettier.config.js"],
	"exclude": ["node_modules", "dist"]
}
