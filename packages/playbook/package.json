{
	"package": "@fat-fuzzy/playbook",
	"name": "@fat-fuzzy/playbook",
	"version": "0.1.25",
	"description": "A UI library explorer and demo",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"test": "pnpm test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:ui": "NODE_ENV=test playwright test --ui",
		"test:e2e": "NODE_ENV=test playwright test",
		"test:report": "NODE_ENV=test playwright test --reporter=html",
		"test:unit": "vitest run"
	},
	"main": "./dist/index.js",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./api": "./dist/index.js"
	},
	"peerDependencies": {
		"@eslint/compat": "^1.0.0",
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@sveltejs/kit": "2.0.0",
		"svelte": "^5.0.0",
		"wrangler": "^4.0.0"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "1.55.0",
		"@sveltejs/adapter-cloudflare": "7.2.3",
		"@sveltejs/kit": "2.37.0",
		"@sveltejs/package": "2.5.0",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"publint": "0.3.12",
		"svelte": "5.38.6",
		"svelte-check": "4.3.1",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vite": "7.1.3",
		"vitest": "3.2.4"
	},
	"type": "module"
}
