{
	"package": "@fat-fuzzy/playbook",
	"name": "@fat-fuzzy/playbook",
	"version": "0.1.7",
	"description": "A UI library explorer and demo",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && svelte-package",
		"preview": "vite preview",
		"test": "pnpm test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "./node_modules/@fat-fuzzy/config/node_modules/.bin/playwright test",
		"test:report": "playwright show:report",
		"test:unit": "vitest run"
	},
	"main": "./dist/index.js",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./api": "./dist/index.js"
	},
	"peerDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@sveltejs/kit": "2.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.48.1",
		"@sveltejs/adapter-cloudflare": "^5.0.2",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^6.2.7",
		"vitest": "^3.0.5"
	},
	"type": "module"
}
