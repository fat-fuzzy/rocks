{
	"package": "@fat-fuzzy/playbook",
	"name": "@fat-fuzzy/playbook",
	"version": "0.1.2",
	"description": "Fat Fuzzy Playbook / UI package explorer",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && svelte-package",
		"preview": "vite preview",
		"test": "pnpm test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "playwright test",
		"test:unit": "vitest"
	},
	"main": "./dist/index.js",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./api": "./dist/index.js"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/lib": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.45.2",
		"@sveltejs/adapter-cloudflare": "^4.6.1",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "3.0.2",
		"svelte": "5.0.0-next.184",
		"svelte-check": "^3.8.4",
		"svelte-preprocess": "^5.1.4",
		"@typescript-eslint/eslint-plugin": "^7.16.1",
		"@typescript-eslint/parser": "^7.16.1",
		"prettier": "^3.3.3",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
