{
	"package": "@fat-fuzzy/doc",
	"name": "@fat-fuzzy/doc",
	"version": "0.1.41",
	"description": "Fat Fuzzy Doc",
	"main": "index.js",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:csstokens": "rollup --config rollup.config.csstokens.js -w",
		"build:csstokens": "rollup --config rollup.config.csstokens.js",
		"dev": "vite dev",
		"build": "pnpm build:csstokens && vite build",
		"preview": "pnpm build:csstokens && vite preview",
		"test": "pnpm build:csstokens && playwright test",
		"test:ui": "playwright test --ui",
		"test:report": "playwright show:report",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:css": "stylelint ./src/lib/styles/css/**/*.css",
		"lint:scss": "stylelint ./src/lib/styles/scss/**/*.scss",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/markdown": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.40.0",
		"@sveltejs/adapter-cloudflare": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/cookie": "^0.5.4",
		"autoprefixer": "^10.4.16",
		"mdsvex": "^0.11.0",
		"postcss": "8.4.31",
		"rollup": "4.4.1",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-standard-scss": "^11.1.0",
		"svelte": "^4.2.4",
		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^5.1.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^5.1.3",
		"vitest": "^1.0.0"
	},
	"type": "module"
}
