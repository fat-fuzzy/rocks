{
	"name": "@fat-fuzzy/doc",
	"version": "0.1.61",
	"description": "Fat Fuzzy Doc",
	"main": "index.js",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:css": "rollup --config rollup.config.cssmain.js",
		"dev:csstokens": "rollup --config rollup.config.csstokens.js -w",
		"build:css": "rollup --config rollup.config.cssmain.js",
		"build:csstokens": "rollup --config rollup.config.csstokens.js",
		"dev": "vite dev",
		"build": "pnpm build:css && pnpm build:csstokens && vite build",
		"preview": "pnpm build:css && pnpm build:csstokens && vite preview",
		"test": "pnpm build:css && pnpm build:csstokens && pnpm test:e2e",
		"test:ui": "NODE_ENV=test playwright test --ui",
		"test:e2e": "NODE_ENV=test playwright test",
		"test:report": "NODE_ENV=test playwright test --reporter=html",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:css": "./node_modules/@fat-fuzzy/config/node_modules/.bin/stylelint ./src/lib/styles/css/**/*.css &> ./logs/stylelint-css.log",
		"lint:scss": "./node_modules/@fat-fuzzy/config/node_modules/.bin/stylelint ./src/lib/styles/scss/**/*.scss &> ./logs/stylelint-scss.log",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"peerDependencies": {
		"@eslint/compat": "^1.0.0",
		"wrangler": "^4.0.0"
	},
	"dependencies": {
		"dompurify": "3.2.6"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/gfx": "workspace:*",
		"@fat-fuzzy/playbook": "workspace:*",
		"@fat-fuzzy/sketch": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@playwright/test": "1.55.0",
		"@sveltejs/adapter-cloudflare": "7.2.3",
		"@sveltejs/kit": "2.37.0",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"autoprefixer": "10.4.21",
		"cssnano": "7.1.1",
		"mdsvex": "0.12.6",
		"postcss": "8.5.6",
		"postcss-import": "16.1.1",
		"postcss-preset-env": "10.3.1",
		"rollup": "4.51.0",
		"rollup-plugin-postcss": "4.0.2",
		"rollup-plugin-scss": "4.0.1",
		"sass": "1.93.2",
		"svelte": "5.38.6",
		"svelte-check": "4.3.1",
		"svelte-preprocess": "6.0.3",
		"tslib": "2.8.1",
		"typescript": "5.9.2",
		"vite": "7.1.5",
		"vitest": "3.2.4"
	},
	"type": "module"
}
