{
	"name": "@fat-fuzzy/doc",
	"version": "0.1.47",
	"description": "Fat Fuzzy Doc",
	"main": "index.js",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:csstokens": "rollup --config rollup.config.csstokens.js -w",
		"build:csstokens": "rollup --config rollup.config.csstokens.js",
		"dev": "vite dev",
		"build": "pnpm build:csstokens && vite build",
		"preview": "pnpm build:csstokens && vite preview",
		"test": "pnpm build:csstokens && pnpm test:e2e",
		"test:ui": "playwright test --ui",
		"test:e2e": "playwright test",
		"test:report": "playwright show:report",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:css": "./node_modules/@fat-fuzzy/config/node_modules/.bin/stylelint ./src/lib/styles/css/**/*.css &> ./logs/stylelint-css.log",
		"lint:scss": "./node_modules/@fat-fuzzy/config/node_modules/.bin/stylelint ./src/lib/styles/scss/**/*.scss &> ./logs/stylelint-scss.log",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"dependencies": {
		"dompurify": "^3.1.6"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/gfx": "workspace:*",
		"@fat-fuzzy/playbook": "workspace:*",
		"@fat-fuzzy/sketch": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@fat-fuzzy/validation": "workspace:*",
		"@playwright/test": "^1.46.1",
		"@sveltejs/adapter-cloudflare": "^4.7.3",
		"@sveltejs/enhanced-img": "^0.3.3",
		"@sveltejs/kit": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.5",
		"@types/cookie": "^0.5.4",
		"@types/dompurify": "^3.0.5",
		"@types/node": "^20.14.10",
		"autoprefixer": "^10.4.19",
		"mdsvex": "^0.11.2",
		"postcss": "8.4.35",
		"rollup": "^4.22.4",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.77.8",
		"svelte": "5.0.5",
		"svelte-check": "^4.0.5",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"vite": "^5.3.4",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
