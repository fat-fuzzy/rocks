{
	"name": "@fat-fuzzy/play",
	"version": "0.1.18",
	"description": "Fat Fuzzy Play - code experiments",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:csstokens": "rollup --config rollup.config.csstokens.js -w",
		"build:csstokens": "rollup --config rollup.config.csstokens.js",
		"dev": "vite dev",
		"build": "pnpm build:csstokens && vite build",
		"preview": "pnpm build:csstokens && vite preview",
		"test": "pnpm test:integration && pnpm test:unit",
		"test:integration": "pnpm build:csstokens && playwright test",
		"test:ui": "playwright test --ui",
		"test:report": "playwright show:report",
		"lint:css": "stylelint ./src/lib/styles/css/**/*.css",
		"lint:scss": "stylelint ./src/lib/styles/scss/**/*.scss",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@fat-fuzzy/lib": "workspace:*"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/ui": "workspace:*",
		"@playwright/test": "^1.40.0",
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"@sveltejs/kit": "^1.27.6",
		"@sveltejs/package": "^2.2.2",
		"autoprefixer": "^10.4.16",
		"postcss": "8.4.31",
		"rollup": "4.4.1",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-standard-scss": "^11.1.0",
		"svelte": "^4.2.4",
		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^5.1.0",
		"three": "0.158.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vitest": "^0.34.6"
	},
	"type": "module"
}
