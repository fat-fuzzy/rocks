{
	"name": "@fat-fuzzy/play",
	"version": "0.1.31",
	"description": "Fat Fuzzy Play - code experiments",
	"author": "Patricia Boh",
	"license": "MIT",
	"scripts": {
		"dev:csstokens": "rollup --config rollup.config.csstokens.js -w",
		"build:csstokens": "rollup --config rollup.config.csstokens.js",
		"dev": "vite dev",
		"build": "pnpm build:csstokens && vite build",
		"preview": "pnpm build:csstokens && vite preview",
		"test": "pnpm test:integration && pnpm test:unit",
		"test:integration": "pnpm build:csstokens && playwright test",
		"test:ui": "playwright test --ui",
		"test:report": "playwright show:report",
		"lint:css": "stylelint ./src/lib/styles/css/**/*.css",
		"lint:scss": "stylelint ./src/lib/styles/scss/**/*.scss",
		"lint:prettier": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
		"lint": "pnpm lint:css; pnpm lint:scss; pnpm lint:prettier",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest"
	},
	"dependencies": {
		"@fat-fuzzy/lib": "workspace:*"
	},
	"devDependencies": {
		"@fat-fuzzy/config": "workspace:*",
		"@fat-fuzzy/ui-s5": "workspace:*",
		"@fat-fuzzy/style": "workspace:*",
		"@fat-fuzzy/sketch": "workspace:*",
		"@playwright/test": "^1.43.1",
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/kit": "^2.5.6",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"autoprefixer": "^10.4.17",
		"postcss": "8.4.35",
		"postcss-jit-props": "^1.0.14",
		"postcss-preset-env": "^9.2.0",
		"rollup": "4.12.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-scss": "^4.0.0",
		"sass": "^1.75.0",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-config-standard-scss": "^13.0.0",
		"svelte": "5.0.0-next.175",
		"svelte-check": "^3.6.9",
		"svelte-preprocess": "^5.1.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.2.11",
		"vitest": "^1.2.0"
	},
	"type": "module"
}
